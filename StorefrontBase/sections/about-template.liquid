                {% endif %} 
                {% if block.settings.socialurl3 != blank %}
                <div class="social-url">{{block.settings.socialurl3}}</div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %} 
      </div>
    </div>
  </div>
</div>
{% endif %}

