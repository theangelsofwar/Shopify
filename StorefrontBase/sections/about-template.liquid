{% unless template contains 'style2' %}  
{% if section.settings.pagestyle == "style1" %}
<div class="page-width about-us"> 

  {% if section.settings.top-text != blank %}
  <div class="top-text-block">{{ section.settings.top-text}}</div>
  {% endif %}

  {% for block in section.blocks limit: section.blocks.size %} 
  {% if block.type == 'image_with_text' %}

  {% capture image_layout %}
  <div class="feature-row__item {% if block.settings.layout == 'right' %} hide large-up--show {% endif %}"> 
    {% if block.settings.image != blank %}
    {{ block.settings.image | img_url: 'master' | img_tag: block.settings.image.alt, 'feature-row__image' }}
    {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %} 
  </div>
  {% endcapture %}

  <div class="feature-row">
    {% if block.settings.layout == 'left' %}
    {{ image_layout }}
    {% endif %}

    {% if block.settings.layout == 'right' %}
    <div class="feature-row__item large-up--hide"> 
      {% if block.settings.image != blank %}
      {{ block.settings.image | img_url: 'master' | img_tag: block.settings.image.alt, 'feature-row__image' }}
      {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %} 
    </div>
    {% endif %}

    <div class="feature-row__item feature-row__text feature-row__text--{{ section.settings.layout }}">
      <div class="row-text"> 
        {% if block.settings.title != blank %}
        <div class="block-title">{{ block.settings.title }}</div>
        {% endif %}

        {% if block.settings.text != blank %}
        <div class="rte-setting featured-row__subtext">{{ block.settings.text }}</div>
        {% endif %}

        {% if block.settings.button_label != blank and block.settings.button_link != blank %} 
        <a href="{{ block.settings.button_link }}" class="btn btn--secondary btn--large"> {{ block.settings.button_label }} </a> 
        {% endif %}             	
      </div>
    </div>
    {% if block.settings.layout == 'right' %}
    {{ image_layout }}
    {% endif %} 
  </div>  
  {% endif %}        
  {% endfor %} 
</div>
{% endif %}
{% endunless %}

{% if section.settings.pagestyle == "style2" or template contains 'style2' %}
<div class="page-width">
  <div class="about-style-2">  
    {% if section.settings.top-text != blank %}
