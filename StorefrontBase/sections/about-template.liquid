    {% endif %}
    {% for block in section.blocks limit: section.blocks.size%}
    {% if block.type == 'style2' %}
    {% if block.settings.aboutimg != blank %}
    {{ block.settings.aboutimg | img_url: 'master' | img_tag: block.settings.aboutimg.alt, 'about_us_image' }}
    {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div class="grid">
      <div class="grid__item medium-up--four-fifths medium-up--push-one-tenth">
        <div class="grid about-details">
          <div class="grid__item medium-up--one-fifth"> {% if block.settings.title1 != blank %}
            <div class="block-title">{{ block.settings.title1 }}</div>
            {% endif %} 
          </div>
          <div class="grid__item medium-up--four-fifths"> {% if block.settings.title1des != blank %}
            <div class="block-des">{{ block.settings.title1des }}</div>
            {% endif %} 
          </div>             
          <div class="grid__item medium-up--one-fifth"> {% if block.settings.title2 != blank %}
            <div class="block-title">{{ block.settings.title2 }}</div>
            {% endif %} 
          </div>
          <div class="grid__item medium-up--four-fifths"> {% if block.settings.title2des != blank %}
            <div class="block-des">{{ block.settings.title2des }}</div>
            {% endif %} 
          </div>              
          <div class="grid__item medium-up--one-fifth"> {% if block.settings.title3 != blank %}
            <div class="block-title">{{ block.settings.title3 }}</div>
            {% endif %} 
          </div>
          <div class="grid__item medium-up--four-fifths"> {% if block.settings.title3des != blank %}
            <div class="block-des">{{ block.settings.title3des }}</div>
            {% endif %} 
          </div>           
          <div class="grid__item medium-up--one-fifth"> {% if block.settings.title4 != blank %}
            <div class="block-title">{{ block.settings.title4 }}</div>
            {% endif %} 
          </div>
          <div class="grid__item medium-up--four-fifths"> {% if block.settings.title4des != blank %}
            <div class="block-des">{{ block.settings.title4des }}</div>
            {% endif %} 
          </div>             
          <div class="grid__item medium-up--one-fifth"> {% if block.settings.title5 != blank %}
            <div class="block-title">{{ block.settings.title5 }}</div>
            {% endif %} 
          </div>
          <div class="grid__item medium-up--four-fifths team-bio">
            <div class="grid">
              <div class="grid__item medium-up--one-third text-center"> {% if block.settings.team1pic != blank %}
                {{ block.settings.team1pic | img_url: '300x' | img_tag: block.settings.team1pic.alt, 'team_member_pic' }}
                {% endif %}
                {% if block.settings.team1bio != blank %}
                <div class="team-bio"> {{ block.settings.team1bio }}</div>
                {% endif %} 
                {% if block.settings.socialurl1 != blank %}
                <div class="social-url">{{block.settings.socialurl1}}</div>
                {% endif %}
              </div>
              <div class="grid__item medium-up--one-third text-center"> {% if block.settings.team2pic != blank %}
                {{ block.settings.team2pic | img_url: '300x' | img_tag: block.settings.team2pic.alt, 'team_member_pic' }}
                {% endif %}
                {% if block.settings.team2bio != blank %}
                <div class="team-bio"> {{ block.settings.team2bio }}</div>
                {% endif %} 
                {% if block.settings.socialurl2 != blank %}
                <div class="social-url">{{block.settings.socialurl2}}</div>
                {% endif %}
              </div>
              <div class="grid__item medium-up--one-third text-center"> {% if block.settings.team3pic != blank %}
                {{ block.settings.team3pic | img_url: '300x' | img_tag: block.settings.team3pic.alt, 'team_member_pic' }}
                {% endif %}
