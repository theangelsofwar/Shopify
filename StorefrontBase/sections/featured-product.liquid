        "id": "featured_product",
        "label": "Product"
      },	
      {
        "type": "select",
        "id": "image_size",
        "label": "Image size",
        "options": [
          { "value": "small", "label": "Small" },
		  { "value": "medium", "label": "Medium" },
          { "value": "large", "label": "Large" }
        ],
        "default": "medium"
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "label": "Enable Image Zoom?",
        "default": true
      },            
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show Vendor?",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "spr_review",
        "label": "Show Product Review?",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "spr_availability",
        "label": "Show Product Availability?",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "spr_sku",
        "label": "Show Product SKU?",
        "default": true
      },
	  {
        "type": "checkbox",
        "id": "countdown",
        "label": "Show Countdown?",
        "default": false
      },
      {
        "type": "text",
        "id": "countdown_lbl",
        "label": "Label",
        "default": "Hurry up! Sales End In"
      },		
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show Social Sharing Buttons?",
        "default": true
      },
	  {
        "type": "header",       
        "content": "Variant style"
      },
	  {
        "type": "checkbox",
        "id": "show_variant_swatches",
        "label": "Show Variant Swatches?",
        "default": true
      },        
      {
        "type": "header",
        "content": "Fake Orders"
