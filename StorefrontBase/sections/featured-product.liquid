        "label": "Max Items",
        "min": 1,
        "max": 50,
        "step": 1,
        "default": 20
      },
      {
        "type": "range",
        "id": "orders_time",
        "label": "Order time",
        "min": 5,
        "max": 48,
        "step": 1,
        "default": 24
      },
      {
        "type": "text",
        "id": "orders_msg",
        "label": "Orders Message",
        "default": "[orders] sold in last [hours] hours",
		"info":"Use '[orders]' for items counts and '[hours]' for hours counts"
      }
    ],
    "presets": [
      {
        "name": "Single Product",
        "category": "1. Products"
      }
    ]
  }
