            {%- else -%}
            <ul class="payment-icons list--inline"> 
              {% if section.settings.show_payment_visa %}<li><i class="ad ad-cc-visa" aria-hidden="true"></i></li>{% endif %}                         
              {% if section.settings.show_payment_mastercard %}<li><i class="ad ad-cc-mastercard" aria-hidden="true"></i></li>{% endif %}
              {% if section.settings.show_payment_american_express %}<li><i class="ad ad-cc-amex" aria-hidden="true"></i></li>{% endif %}
              {% if section.settings.show_payment_paypal %}<li><i class="ad ad-cc-paypal" aria-hidden="true"></i></li>{% endif %}
              {% if section.settings.show_payment_discover %}<li><i class="ad ad-cc-discover" aria-hidden="true"></i></li>{% endif %}
              {% if section.settings.show_payment_stripe %}<li><i class="ad ad-cc-stripe" aria-hidden="true"></i></li>{% endif %}
              {% if section.settings.show_payment_jcb %}<li><i class="ad ad-cc-jcb" aria-hidden="true"></i>{% endif %}
              {% if section.settings.show_payment_apple %}<li><i class="ad ad-cc-apple-pay" aria-hidden="true"></i>{% endif %}
              {% if section.settings.show_payment_google %}<li><i class="ad ad-google" aria-hidden="true"></i>{% endif %}
            </ul>
            {%- endif -%}
          </div>
        {% endif %}
        {% if section.settings.copyright_text != blank %}
        <div class="grid__item{% if section.settings.show_payment %} medium-up--one-half text-left{% else %} text-center {% endif %}">
          {{ section.settings.copyright_text }}
          {% if section.settings.show_designby %}<span class="designBy">{% if section.settings.copyright_text != blank %}<br />{% endif %}Designed by <a href="https://www.adornthemes.com" target="_blank">AdornThemes</a></span>{% endif %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endif %}
</footer>
{% endcapture %}
